{% extends 'Admin/base.html.twig' %}

{% block title %}{{ parent() }}Post List{% endblock %}

{% block body %}
    <section id="main-container">
        {% if postLists is empty %}
            <p>No Posts found in the application</p>
        {% else %}
            <div class="table-container">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Content</th>
                            <th>Time</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for postList in postLists %}
                            <tr>
                                <td>{{ postList.getContent() }}</td>
                                <td>{{ postList.getdatetime()|date('Y-m-d H:i:s') }}</td>
                                <td><a href="{{ path("admin_post_delete", {deletePost: postList.getId()}) }}"><i class="fas fa-minus-square"></i></a></td>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        {% endif %}
    </section>    
{% endblock %}