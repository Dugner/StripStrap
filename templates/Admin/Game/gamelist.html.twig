{% extends 'Admin/base.html.twig' %}

{% block title %}{{ parent() }}Game Admin Panel{% endblock %}

{% block body %}

        {% if gamelist is empty %}
                <p>No Users found in the application</p>
            {% else %}
                <div class="table-container">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Title</th>
                                <th>Description</th>
                                <th>Picture</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for gamelists in gamelist %}
                                <tr>
                                    <td>{{ gamelists.getTitle() }}</td>
                                    <td>{{ gamelists.getDescription() }}</td>
                                    {% if gamelists.getPicture() is not empty %}
                                    <td><img src="{{ path('admin_picture', {'document': gamelists.getPicture().getId()}) }}" width='40px'></td>
                                    <td><a href="{{ path("admin_game", {edit: gamelists.getId()}) }}">Edit</a></td>
                                    <td><a href="{# path("admin_gamelist_delete", {delete: gamelists.getId()}) #}">Delete</a></td>
						            {% else %}
							        <td></td>
						                {% endif %}
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            {% endif %}
        
{% endblock %}