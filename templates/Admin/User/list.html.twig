{% extends 'Admin/base.html.twig' %}

{% block title %}{{ parent() }}User List{% endblock %}

{% block body %}
        
        <section id="main-container">

            {% if users is empty %}
                <p>No Users found in the application</p>
            {% else %}

                <div class="table-container">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Username</th>
                                <th>Firstname</th>
                                <th>Lastname</th>
                                <th>Email</th>
                                <th>Birthday</th>
                                <th>Country</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for user in users %}
                                <tr>
                                    <td>{{ user.getUsername() }}</td>
                                    <td>{{ user.getFirstname() }}</td>
                                    <td>{{ user.getLastname() }}</td>
                                    <td>{{ user.getEmail() }}</td>
                                    <td>{{ user.getDateOfBirth()|date('d/m/Y') }}</td>
                                    <td>{{ user.getCountry() }}</td>
                                    <td>
                                        <a class="helping" href="{{ path('admin_user_detail', { user: user.getId() }) }}">
                                            <i class="fas fa-pen-square"></i>
                                            <div class="help hidden">
                                                <p><strong>Help:</strong> Update the details of the user</p>
                                            </div>
                                        </a>
                                        <a class="helping" href="{{ path('admin_user_delete', { deleteUser: user.getId() })}}">
                                            <i class="fas fa-minus-square"></i>
                                            <div class="help hidden">
                                                <p><strong>Help:</strong> Delete the user, please be carefully</p>
                                            </div>
                                        </a>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            {% endif %}

        </section>

{% endblock %}