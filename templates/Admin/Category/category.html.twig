{% extends 'Admin/base.html.twig' %}

{% block title %}{{ parent() }}Category Admin Panel{% endblock %}

{% block body %}
    <section id="main-container">
        {% if categoryLists is empty %}
            <p>No Users found in the application</p>
        {% else %}
            <div class="table-container">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Category</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for categoryList in categoryLists %}
                            <tr>
                                <td>{{ categoryList.getLabel() }}</td>
                                <td><a href="{{ path("admin_category_delete", {categoryDel: categoryList.getId()}) }}"><i class="fas fa-minus-square"></i></a></td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        {% endif %}
        <div style="margin-top: 40px">
        </div>
        {{ form(categoryForm) }}
    </section>    
{% endblock %}