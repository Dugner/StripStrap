{% extends 'base.html.twig' %}

{% block title %}Profile page{% endblock %}

{% block body %}

    <div>
        <h1> My details </h1>
        <img class="card-img-top" src="{{ path('download_document', {'document': app.user.getPicture().getId()})  }}" alt="Card image cap" width="100px">
        <h5> {{ app.user.getUsername() }} <h5>
        <h6> {{ app.user.getFirstname() }}{{ app.user.getLastname() }} <h6>
        <p> {{ app.user.getEmail() }} </p>
        <p> {{ app.user.getCountry() }} </p>
        <p> {{ app.user.getDateOfBirth()| date('Y m d') }} </p>
    </div>
    <div>
        <h1> My character details </h1>




    </div>











{% endblock %}