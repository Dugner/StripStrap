{% extends 'base.html.twig' %}

{% block title %} {{parent()}} Search {% endblock %}

{% block body %}
<div class="container">
    {{ form (userSearch) }}
    {% if users is empty %}
        <p>No Users found in the application</p>
    {% else %}
        <div class="table-container">
            <table class="table">
                <thead>
                    <tr>
                        <th>Username</th>
                        <th>Picture</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                {{ dump(friendId )}}
                    {% for user in users %}
                        <tr>
                            <td><a href="{{ path('wall_users', {userwall: user.getId()}) }}">{{ user.getUsername() }}</a></td>
                            <td><a href="{{ path('wall_users', {userwall: user.getId()}) }}"><img style="width: 40px; height: 40px;" class="card-img-top" src="{{ path('download_document', {'document': user.getPicture().getId()})  }}" alt="Card image cap"></a></td>
                            <td>
                            
                           
                            <a href="{{ path('add_ninja', { addninja: user.getId() }) }}"><i style="font-size: 2.4em" class="fas fa-user-ninja"></i></a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    {% endif %}
</div>
{% endblock %}

